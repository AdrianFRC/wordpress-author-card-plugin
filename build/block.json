{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "post/author-card",
  "version": "0.1.0",
  "title": "Author Card",
  "category": "media",
  "icon": "admin-users",
  "description": "crea un blocco che visualizza le informazioni dell'autore come foto, nome e biografia",
  "example": {},
  "supports": {
    "color": {
      "background": true,
      "text": true
    },
    "spacing": {
      "margin": true,
      "padding": true
    },
    "html": true,
    "shadow": true
  },
  "attributes": {
    "hideBiografy": {
      "type": "boolean",
      "default": false
    },
    "blockId": {
      "type": "string"
    },
    "radiusLeft": {
      "type": "number",
      "default": 0
    },
    "radiusRight": {
      "type": "number",
      "default": 0
    }
  },
  "textdomain": "author-card",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css",
  "render": "file:./render.php",
  "viewScript": "file:./view.js"
}